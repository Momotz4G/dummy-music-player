<Window x:Class="Dummy_Music_Player.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About Simple Music Player" Height="450" Width="350"
        ResizeMode="NoResize" WindowStartupLocation="CenterOwner" ShowInTaskbar="False">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Image Grid.Row="0" Source="music.ico" Width="80" Height="80" Margin="5" HorizontalAlignment="Center"/>

            <TextBlock Grid.Row="1" Text="Simple Music Player" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>

            <TextBlock Grid.Row="2" x:Name="VersionText" Text="Version..." FontSize="12" Foreground="Gray" HorizontalAlignment="Center" Margin="0,0,0,10"/>

            <TextBlock Grid.Row="3" Text="Created by Stephanus Alexander Momot" FontSize="14" HorizontalAlignment="Center" Margin="0,5"/>

            <Separator Grid.Row="4" Margin="0,15"/>

            <TextBlock Grid.Row="5" Text="Features:" FontSize="14" FontWeight="Bold" Margin="0,0,0,5" HorizontalAlignment="Center"/>

            <ScrollViewer Grid.Row="6" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <StackPanel Margin="40,0,0,0">
                    <TextBlock Text="• Load music from a folder" Margin="2"/>
                    <TextBlock Text="• Play, Pause, Next, Previous" Margin="2"/>
                    <TextBlock Text="• Shuffle and Repeat (All, One)" Margin="2"/>
                    <TextBlock Text="• 'Play Next' Priority Queue" Margin="2"/>
                    <TextBlock Text="• Search Functionality" Margin="2"/>
                    <TextBlock Text="• Discord Rich Presence" Margin="2"/>
                    <TextBlock Text="• Toast Notifications" Margin="2"/>
                    <TextBlock Text="• Drag and Drop Folder Loading" Margin="2"/>
                    <TextBlock Text="• Pin on Top" Margin="2"/>
                    <TextBlock Text="• Play/Pause with Keyboard Windows Key" Margin="2"/>
                    <TextBlock Text="• Load/Save Queue as Playlist" Margin="2"/>
                    <TextBlock Text="• Mini-Player to Control Your Music" Margin="2"/>
                    <TextBlock Text="• Library to Group an Artist/Album" Margin="2"/>
                    <TextBlock Text="• Stream to Play Through Jamendo Music." Margin="2"/>
                    <TextBlock Text="• Synced Lyrics Supported." Margin="2"/>
                </StackPanel>
            </ScrollViewer>

        </Grid>
        <Button Grid.Row="1" Name="OkButton" Content="OK" Width="100" HorizontalAlignment="Center" Click="OkButton_Click" IsDefault="True"/>

    </Grid>
</Window>